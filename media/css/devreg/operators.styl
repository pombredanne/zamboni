@import 'lib';

h1 {
    font-size: 30px;
    padding: 20px 0;

    a {
        color: $white;

        small {
            display: block;
            font-weight: bold;
            font-size: 14px;
            line-height: 18px;
        }
        &:hover {
            text-decoration: none;
        }
    }
}

nav.paginator {
    margin-top: 30px;

    .rel a.button {
        line-height: 48px;
        padding: 0 30px;
    }
}

table.preload-candidates {
    td {
        padding: 15px 10px;
    }
    img {
        float: left;
        margin: 0 15px 15px 0;
    }
}
