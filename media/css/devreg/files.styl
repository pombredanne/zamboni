.syntaxhighlighter {
  background: white;
  width: 100%;
  margin: 1em 0 1em 0;
  position: relative;
  overflow-x: auto;
  overflow-y: hidden;
  font-size: 14px;
  line-height: 16px;

  code {
    background: none;
    margin: 0;
    padding: 0;
    vertical-align: baseline;
    font-weight: normal;
    font-style: normal;
    font-size: 1em;
    white-space: pre-wrap;
    word-wrap: break-word;
    overflow-x: hidden;

    &.unwrapped {
      white-space: pre;
      overflow-x: scroll;
    }
  }

  &.source {
    overflow: hidden;
  }

  .bold {font-weight: bold;}
  .italic {font-weight: italic;}
  .line {white-space: pre;}

  table {
    width: 100%;

    caption {
      color: black;
      text-align: left;
      padding: .5em 0 0.5em 1em;
    }

    td.code {
      width: 100%;

      .container {
        position: relative;

        textarea {
          -moz-box-sizing: border-box;
          box-sizing: border-box;
          position: absolute;
          left: 0;
          top: 0;
          width: 100%;
          height: 100%;
          border: none;
          background: white;
          padding-left: 1em;
          overflow: hidden;
          white-space: pre;
        }
      }

      .line {
        padding: 0 1em;
      }
    }

    td.gutter .line {
      text-align: right;
      padding: 0 0.5em 0 1em;

      a {
        display: block;
        text-decoration: none;
      }
    }
  }

  &.printing {
    .line {
      &.highlighted {
        .number, &.alt1 .content, &.alt2 .content {
          background: none;
        }
      }

      .number {
        color: #bbbbbb;
      }

      .content {
        color: black;
      }

      .toolbar {
        display: none;
      }
    }

    a {
      text-decoration: none;
    }

    .plain, .plain a {
      color: black;
    }

    .comments, .comments a {
      color: #008200;
    }

    .string, .string a {
      color: blue;
    }

    .keyword {
      color: #006699;
      font-weight: bold;
    }

    .preprocessor {
      color: gray;
    }

    .variable {
      color: #a70;
    }

    .value {
      color: #090;
    }

    .functions {
      color: #ff1493;
    }

    .constants {
      color: #0066cc;
    }

    .script {
      font-weight: bold;
    }

    .color1, .color1 a {
      color: gray;
    }

    .color2, .color2 a {
      color: #ff1493;
    }

    .color3, .color3 a {
      color: red;
    }

    .break, .break a {
      color: black;
    }
  }

  .gutter {
    color: #afafaf;

    .line {
      border-right: 1px solid gray;

      &.highlighted {
        background-color: #6ce26c;
        color: white;
      }

      .content {
        border: none;
      }
    }
  }

  &.collapsed {
    overflow: visible;

    .toolbar {
      color: blue;
      background: white;
      border: 1px solid #6ce26c;

      a {
        color: blue;

        &:hover {
          color: red;
        }
      }
    }
  }

  .toolbar {
    color: white;
    background: #6ce26c;
    border: none;

    a {
      color: white;

      &:hover {
        color: black;
      }
    }
  }

  .plain, .plain a {
    color: #073642;
  }

  .comments, .comments a {
    color: #aaa;
  }

  .string, .string a {
    color: #dc322f;
  }

  .keyword {
    color: #586e75;
    font-weight: bold;
  }

  .preprocessor {
    color: gray;
  }

  .variable {
    color: #a70;
  }

  .value {
    color: #090;
  }

  .functions {
    color: #ff1493;
  }

  .constants {
    color: #06c;
  }

  .script {
    font-weight: bold;
    color: #006699;
    background-color: none;
  }

  .color1, .color1 a {
    color: #859900;
  }

  .color2, .color2 a {
    color: #ff1493;
  }

  .color3, .color3 a {
    color: red;
  }

}
